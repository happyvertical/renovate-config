{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "pnpm-specific configuration",
  "extends": [
    "local>happyvertical/renovate-config"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 9am on monday"]
  },
  "postUpdateOptions": ["pnpmDedupe"],
  "allowedPostUpgradeCommands": ["^pnpm"],
  "postUpgradeTasks": {
    "commands": ["pnpm install --no-frozen-lockfile"],
    "fileFilters": ["pnpm-lock.yaml"],
    "executionMode": "branch"
  },
  "packageRules": [
    {
      "matchManagers": ["npm"],
      "rangeStrategy": "bump"
    }
  ]
}
