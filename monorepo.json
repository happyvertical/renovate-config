{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Monorepo-specific configuration",
  "extends": [
    "local>happyvertical/renovate-config"
  ],
  "packageRules": [
    {
      "description": "Ignore workspace:* internal dependencies",
      "matchUpdateTypes": ["pin", "digest", "patch", "minor", "major"],
      "matchCurrentVersion": "workspace:*",
      "enabled": false
    }
  ],
  "rangeStrategy": "bump"
}
